server {
    listen ${SERVER_PORT};
    server_name ${SERVER_HOST};

    root /data;

    location ~ /static/ {
        root /var/html/;
        autoindex off;
    }

    location /api/ {
        proxy_pass http://${FASTAPI_HOST}:${FASTAPI_PORT}/api/;
    }

    location ~* \.(?:jpg|jpeg|gif|png|ico|css|js)$ {
        log_not_found off;
        expires 90d;
    }

    location = /50x.html {
        root   /usr/share/nginx/html;
    }
    error_page  500 502 503 504  /50x.html;
}